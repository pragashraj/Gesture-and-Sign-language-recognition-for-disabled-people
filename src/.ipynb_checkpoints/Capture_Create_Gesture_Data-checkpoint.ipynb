   "source": [
    "def photo_image(img):\n",
    "    h, w = img.shape[:2]\n",
    "    data = f'P6 {w} {h} 255 '.encode() + img[..., ::-1].tobytes()\n",
    "    return PhotoImage(width=w, height=h, data=data, format='PPM')"
   ]
